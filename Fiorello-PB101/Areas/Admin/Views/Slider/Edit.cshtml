@model SliderEditVM


@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="image">
        <img src="~/img/@Model.Image" style="width:200px; height:100px " />
    </div>

    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Slider</label>
            <div class="col-sm-10">
                <input class="form-control form-control-normal" asp-for="NewImage" maxlength="100" placeholder="slider photo">
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light " asp-action="Index">Cancel</a>
    </form>

</div>
