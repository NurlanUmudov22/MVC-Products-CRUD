@model IEnumerable<SliderVM> 

@{
    ViewData["Title"] = "Index";
}


<div class=" container mt-5">
    <h2 class="text-center"> Sliders</h2>
    <div class="create-operation">
        <a asp-action="Create" class="btn btn-success text-white btn-sm">
            <i class="ti-plus"></i>
        </a>
    </div>


    <div class="card">

        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                           
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <img src="~/img/@item.Image" style="width:100px ; height: 100px;" /></td>
                                

                                <td>
                                    <a class="btn btn-primary text-white btn-sm" asp-controller="Slider" asp-action="Detail" asp-route-id="@item.Id"><i class="ti-info"></i></a>
                                    <a class="btn btn-warning text-white btn-sm"  asp-action="Edit" asp-route-id="@item.Id"><i class="ti-pencil-alt2"></i></a>

                                    <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                        <button type="submit" class="btn btn-danger text-white btn-sm"><i class="ti-trash"></i></button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

